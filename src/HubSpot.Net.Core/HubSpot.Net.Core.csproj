    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <WarningsAsErrors>nullable;NU1605</WarningsAsErrors>
    </PropertyGroup>
    <ItemGroup>
        <InternalsVisibleTo Include="HubSpot.Net.Core.Test" />
    </ItemGroup>
</Project>
